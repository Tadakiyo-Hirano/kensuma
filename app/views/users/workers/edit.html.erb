<% provide(:title, "作業員情報編集") %>
<% provide(:btn_text, "更新") %>

<div class="card">
  <%= form_with model: @worker, url: users_worker_path, method: :patch, local: true do |f| %>
    <div class="card-body">
      <%= render partial: "form", locals: { f: f, worker: @worker} %>
    </div>
    <div class="card-footer">
      <%= f.submit yield(:btn_text), class: "btn btn-md btn-block btn-success" %>
      <%= link_to "詳細画面へ", users_worker_path(@worker), class: "btn btn-md btn-block btn-default" %>
      <%= link_to "一覧画面へ", users_workers_path, class: "btn btn-md btn-block btn-default" %>
    </div>
  <% end %>
</div>
