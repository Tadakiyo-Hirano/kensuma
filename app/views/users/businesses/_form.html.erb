      <% end %>
      </div>
    </div>
    <br>
    <%= f.label :name %><!-- 会社名 -->
    <span class="p-1 mb-2 rounded bg-danger text-white">必須</span>
    <%= f.text_field :name, class: "form-control" %>
    <br>
    <%= f.label :name_kana %><!-- 会社名(カナ) -->
    <span class="p-1 mb-2 rounded bg-danger text-white">必須</span>
    <%= f.text_field :name_kana, class: "form-control" %>
